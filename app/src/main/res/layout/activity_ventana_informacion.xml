<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentanaInformacion"
    android:background="@drawable/fondo_difuminado">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTIVIDAD FÍSICA Y ENTRENAMIENTO"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="651dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/informacion1" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="651dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/informacion2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para más información podeis contactar con el correo
de la empresa"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mypower@hotmail.com"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mypower@hotmail.com"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp"
                android:visibility="invisible"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>