<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VentanaPrincipiante"
    android:background="@drawable/fondo_difuminado">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rutina Principiante A"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="390dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/plan_a_principiante" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rutina Principiante B"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/plan_b_principiante" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rutina Principiante C"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/plan_principiante_c" />
            

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rutina Principiante D"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/plan_d_principiante"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>